{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"formatter": {
		"enabled": true,
		"ignore": [
			"./node_modules/**/*.*",
			"./dist/**/*.*",
			"./build/**/*.*",
			"./src/6_shared/api/index.ts"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"./node_modules/**/*.*",
			"./dist/**/*.*",
			"./build/**/*.*",
			"./src/6_shared/api/index.ts"
		],
		"rules": {
			"recommended": true
		}
	}
}
